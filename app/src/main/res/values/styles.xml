<resources>

    <style name="CustomEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#A2A2A2</item>
        <item name="android:fontFamily">@font/roboto_flex</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="GrayLabel" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#A2A2A2</item>
        <item name="android:fontFamily">@font/roboto_flex</item>
    </style>

    <style name="RegularText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_flex</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_flex</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>